<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signin_user_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/signin_id_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디를 입력해주세요."
            android:textSize="20sp"
            android:textColor="@color/darkgray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/signin_id_et"/>
        <EditText
            android:id="@+id/signin_id_et"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_morning_et"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/signin_id_label_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/signin_pw_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 입력해주세요."
            android:textSize="20sp"
            android:textColor="@color/darkgray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signin_id_et"/>
        <EditText
            android:id="@+id/signin_pw_et"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_morning_et"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/signin_pw_label_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/signin_login_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="@color/darkgray"
        android:background="@drawable/bg_next_bt"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_user_cl"/>
    <Button
        android:id="@+id/signin_signup_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signup"
        android:textColor="@color/darkgray"
        android:background="@drawable/bg_next_bt"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_user_cl"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>