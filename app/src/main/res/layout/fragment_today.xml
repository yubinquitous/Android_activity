<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/today_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/today_theme_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_next_bt"
        android:text="DARK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/today_name_tv"
            tools:text="YUBIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/today_todo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="'s To-Do list"
            android:textColor="@color/darkgray"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/today_name_tv"
            app:layout_constraintStart_toEndOf="@id/today_name_tv" />

        <LinearLayout
            android:id="@+id/today_cb_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/today_name_tv">

            <CheckBox
                android:id="@+id/today_cb1_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:buttonTint="@color/dark_yellow2"
                android:paddingLeft="5dp"
                android:text="알바"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/today_cb2_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:buttonTint="@color/dark_yellow2"
                android:paddingLeft="5dp"
                android:text="피엘과제"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/today_cb3_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:buttonTint="@color/dark_yellow2"
                android:paddingLeft="5dp"
                android:text="리시프과제"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/today_cb4_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:buttonTint="@color/dark_yellow2"
                android:paddingLeft="5dp"
                android:text="파처강의"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/today_cb5_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:buttonTint="@color/dark_yellow2"
                android:paddingLeft="5dp"
                android:text="강의2"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/today_cb6_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:buttonTint="@color/dark_yellow2"
                android:paddingLeft="5dp"
                android:text="강의3"
                android:textSize="25sp" />
        </LinearLayout>
        <Button
            android:id="@+id/today_next_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textColor="@color/darkgray"
            android:background="@drawable/bg_next_bt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/today_cb_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>